
{{! This is the post loop - each post will be output using this markup }}
{{#get "posts" include="tags,author" limit="all"}}
    {{#foreach posts}}
       <div class="row">
            <div class="col s12 m12">
                <div class="card grey">
                {{#if image}}
                    <div class="card-image">
                        <img src="{{image}}">
                        <span class="card-title">{{title}}</span>
                    </div>
                    <div class="card-content black-text ">

                {{else}}
                    <div class="card-content black-text">
                    <span class="card-title white-text">{{title}}<br/></span>
                {{/if}}
                        <div class="chip grey lighten-1">
                           {{#if author.image}}
                            <img src="{{author.image}}" alt="Contact Person">
                            {{/if}}
                            {{author.name}}
                        </div>
                         <div class="chip grey lighten-1 ">
                         <i class="material-icons remove-things">schedule</i>
                            {{date published_at format="DD MMMM, YYYY HH:MM:SS"}}</div>
        
                            <p>
                            
                            <hr>
                            {{excerpt}}</p>
                    </div>
                    <div class="card-action">
                      <a href="{{url absolute="true"}}" class="red-text">Read more</a>
                    </div>
                </div>
            </div>
        </div>        
    {{/foreach}}
{{/get}}
