{{!< default}}

{{! The comment above "< default" means - insert everything in this file into
    the {body} of the default.hbs template, which contains our header/footer. }}

{{! Everything inside the #post tags pulls data from the post }}
<div class="contact-container grey darken-4">
        <div class="container index-banner">
            <br><br>
{{#post}}
<div class="row">
            <div class="col s12 m12">
                <div class="card grey z-depth-2">
                {{#if image}}
                    <div class="card-image">
                        <img src="{{image}}">
                        <span class="card-title">{{title}}</span>
                    </div>
                    <div class="card-content black-text">

                {{else}}
                    <div class="card-content black-text">
                    <span class="card-title white-text">{{title}} <br /></span>
                {{/if}}
                        <div class="chip grey lighten-1">
                        {{#if author.image}}
                            <img src="{{author.image}}" alt="Contact Person">
                            {{/if}}
                            {{author.name}}
                        </div>
                         <div class="chip grey lighten-1 ">
                         <i class="material-icons remove-things">schedule</i>
                            {{date published_at format="DD MMMM, YYYY HH:MM:SS"}}</div>
                            <p>
                            <hr>
                            {{content}}</p>
                    </div>
                   
                </div>
            </div>
        </div>

{{/post}}
</div>
</div>
